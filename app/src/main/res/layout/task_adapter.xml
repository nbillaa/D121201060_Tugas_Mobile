<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    android:elevation="15dp"
    app:cardElevation="5dp"
    app:cardCornerRadius="15dp"
    android:id="@+id/klikTugas"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/backgroundgradien">

    <LinearLayout
        android:padding="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/judul_tugas"
                    android:layout_weight="0.2"
                    android:text="Nama Tugas"
                    android:justificationMode="inter_word"
                    android:fontFamily="@font/lexenddeca_medium"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <RelativeLayout
                    android:layout_weight="1.8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageButton
                        android:id="@+id/popup_tugas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        app:tint="@color/ungu"
                        android:layout_marginEnd="10dp"
                        android:background="@color/white"
                        android:src="@drawable/ic_more"
                        />
                </RelativeLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/deskripsi_tugas"
                android:text="lorem ipsum dolor sit amet bla bla bla bla bla"
                android:justificationMode="inter_word"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/lexenddeca_light"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:ellipsize="end"
                android:maxLines="3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/kategori"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/rounded_button"
                android:ellipsize="end"

                android:gravity="center"
                android:layout_gravity="end"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="Kategori Tugas"
                android:fontFamily="@font/lexenddeca_regular"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>